<AnchorPane maxHeight="170.0" maxWidth="440.0" minHeight="170.0" minWidth="440.0" prefHeight="170.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.LoginController">
   <children>
      <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#newFilePressed" text="New..." />
                  <MenuItem mnemonicParsing="false" onAction="#openFilePressed" text="Open..." />
                  <MenuItem mnemonicParsing="false" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <PasswordField fx:id="passField" alignment="CENTER" disable="true" layoutX="68.0" layoutY="85.0" prefHeight="27.0" prefWidth="200.0" promptText="password" />
      <Button fx:id="openBtn" defaultButton="true" disable="true" layoutX="297.0" layoutY="85.0" mnemonicParsing="false" onAction="#openPressed" text="Open" />
      <Label fx:id="promtLabel" alignment="CENTER" layoutX="88.0" layoutY="44.0" prefHeight="29.0" prefWidth="160.0" text="Select DB file...">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label fx:id="invalidLabel" layoutX="68.0" layoutY="112.0" prefHeight="20.0" prefWidth="200.0" text="Invalid Password, try again..." textFill="#ae1d1d" visible="false">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
